<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="index.xsl" ?>
<!DOCTYPE portfoli [
        <!ELEMENT portfoli (alumne|curs|moduls)*>
        <!ELEMENT alumne (#PCDATA)>
        <!ELEMENT curs (centre|nom|data)*>
        <!ELEMENT centre (#PCDATA)>
        <!ELEMENT nom (#PCDATA)>
        <!ELEMENT data (#PCDATA)>
        <!ELEMENT moduls (modul)*>
        <!ELEMENT modul (nom|UFs)*>
        <!ELEMENT UFs (UF1|UF2|UF3)*>
        <!ELEMENT UF1 (nom|activitats)*>
        <!ELEMENT activitats (activitat)*>
        <!ELEMENT activitat (img)*>
        <!ELEMENT img (#PCDATA)>
        <!ATTLIST img
                src CDATA #REQUIRED>
        <!ELEMENT UF2 (nom|activitats)*>
        <!ELEMENT UF3 (nom|activitats)*>
        ]>
<portfoli>
<alumne>Roger Arques Nolla</alumne>
   <curs>
